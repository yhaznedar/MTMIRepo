<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mtmi.carapp.SignUp"
    android:background="@drawable/naa">
    <!-- Kayit Ekrani -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="153dp"
        android:id="@+id/imgResim"
        android:src="@drawable/user"

        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Ad Soyad"
        android:id="@+id/edittextAd"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/imgResim"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/userlogin"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Mail"
        android:id="@+id/edittextMail"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/edittextAd"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/mail"
        android:drawablePadding="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edittextSifre"
        android:hint="Şifre"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/edittextMail"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Şifre(Tekrar)"
        android:id="@+id/edittextSifreTekrar"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/edittextSifre"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Doğum Tarihi"
        android:ems="10"
        android:id="@+id/dgmTrh"
        android:inputType="date"
        android:layout_below="@+id/edittextSifreTekrar"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/calendar"
        android:drawablePadding="10dp"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textColor="@color/colorPrimary"
        android:text="KAYDET"
        android:id="@+id/buttonKaydet"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"
        android:drawablePadding="10dp"
        android:layout_below="@+id/dgmTrh"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesabınız var mı? Hemen giriş yapın!"
        android:id="@+id/textViewLogin"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="2dp"
        android:layout_below="@+id/buttonKaydet"/>
</RelativeLayout>